# ===========================================
# Brevy - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# -------------------------------------------
# PostgreSQL Database
# -------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=brevy
POSTGRES_PORT=5432

# Database URL for services (uses Docker service name)
# For local development outside Docker, use localhost instead of postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/brevy

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# -------------------------------------------
# API Service
# -------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Secret key for session/JWT signing (generate a secure random string for production)
SECRET_KEY=change-me-in-production-use-a-secure-random-string

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:5173

# -------------------------------------------
# Analytics Service
# -------------------------------------------
ANALYTICS_HOST=0.0.0.0
ANALYTICS_PORT=8001

# Redis channel for click events
REDIS_CHANNEL=brevy:clicks

# Path to GeoIP database (download from MaxMind)
# Leave empty to disable geo lookup
GEOIP_DATABASE_PATH=

# -------------------------------------------
# OAuth - GitHub
# -------------------------------------------
# Register at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -------------------------------------------
# OAuth - Google
# -------------------------------------------
# Register at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -------------------------------------------
# Observability (Optional)
# -------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# OpenTelemetry endpoint for distributed tracing
OTLP_ENDPOINT=
